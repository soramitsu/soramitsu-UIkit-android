<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Font styles-->

    <style name="TextAppearance.Soramitsu.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/uikit_fontBold</item>
        <item name="android:textColor">?attr/uikit_colorHeader</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header1" parent="TextAppearance.Soramitsu.Header">
        <item name="android:textSize">?attr/uikit_textSizeH1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header2" parent="TextAppearance.Soramitsu.Header">
        <item name="android:textSize">?attr/uikit_textSizeH2</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header3" parent="TextAppearance.Soramitsu.Header">
        <item name="android:textSize">?attr/uikit_textSizeH3</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header4" parent="TextAppearance.Soramitsu.Header">
        <item name="android:textSize">?attr/uikit_textSizeH4</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/uikit_fontRegular</item>
        <item name="android:textColor">?attr/uikit_colorBody</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body1" parent="TextAppearance.Soramitsu.Body">
        <item name="android:textSize">?attr/uikit_textSizeB1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body2" parent="TextAppearance.Soramitsu.Body">
        <item name="android:textSize">?attr/uikit_textSizeB2</item>
    </style>

    <!--Font styles-->

    <!-- Buttons -->

    <style name="Widget.Soramitsu.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">?attr/uikit_textSizeB1</item>
        <item name="android:fontFamily">?attr/uikit_fontBold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">?attr/uikit_buttonCornerRadius</item>
        <item name="android:paddingTop">?attr/uikit_buttonVerticalPadding</item>
        <item name="android:paddingBottom">?attr/uikit_buttonVerticalPadding</item>
        <item name="android:paddingStart">?attr/uikit_buttonHorizontalPadding</item>
        <item name="android:paddingEnd">?attr/uikit_buttonHorizontalPadding</item>
    </style>

    <style name="Widget.Soramitsu.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?colorAccent</item>
        <item name="strokeColor">@color/uikit_colorDivider</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">?attr/uikit_fontBold</item>
        <item name="android:textSize">?attr/uikit_textSizeB1</item>
        <item name="cornerRadius">?attr/uikit_buttonCornerRadius</item>
        <item name="android:paddingTop">?attr/uikit_buttonVerticalPadding</item>
        <item name="android:paddingBottom">?attr/uikit_buttonVerticalPadding</item>
        <item name="android:paddingStart">?attr/uikit_buttonHorizontalPadding</item>
        <item name="android:paddingEnd">?attr/uikit_buttonHorizontalPadding</item>
    </style>

    <style name="Widget.Soramitsu.Button.PinCodeNumberButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/uikit_pinCodeButtonTextColor</item>
        <item name="android:textSize">?attr/uikit_pinCodeButtonTextSize</item>
        <item name="android:background">@drawable/uikit_bg_pin_code_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.Body2</item>
        <item name="android:fontFamily">?attr/uikit_fontRegular</item>
    </style>

    <style name="Widget.Soramitsu.Button.PinCodeControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/uikit_bg_pin_code_button</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Buttons -->

    <!-- Progress Bar -->
    <style name="Widget.Soramitsu.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@anim/uikit_progress_rotate</item>
        <item name="android:indeterminateDuration">1300</item>
    </style>
    <!-- Progress Bar -->

</resources>